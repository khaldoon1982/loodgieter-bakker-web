generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  city      String
  subject   String
  message   String
  createdAt DateTime @default(now())
}

model Review {
  id          String   @id @default(cuid())
  name        String
  rating      Int
  text        String
  createdAt   DateTime @default(now())
  isPublished Boolean  @default(false)
}

model FAQ {
  id          String   @id @default(cuid())
  question_nl String
  answer_nl   String
  question_en String
  answer_en   String
  order       Int      @default(0)
  isPublished Boolean  @default(true)
}
